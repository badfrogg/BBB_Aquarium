from flask import Flask, render_template
app = Flask(__name__)
import Adafruit_BBIO.GPIO as GPIO

GPIO.setup("P8_11", GPIO.IN)

@app.route("/")
def hello():
    if GPIO.input("P8_11"):
        SunStatus = "Up"
    else:
        SunStatus = "Down"
    templateData = {
        "SunStatus": SunStatus,
    }
    return render_template("frog.html", **templateData)
    
if __name__ == "__main__":
    app.run(host="192.168.7.2", port=81, debug=True)
